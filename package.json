{
  "name": "web-truyen-tien-hung",
  "version": "1.0.0",
  "private": true,
  "description": "Story/Manga reading platform - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:backend": "cd apps/backend && pnpm prisma generate && pnpm run build",
    "build:frontend": "pnpm --filter frontend build",
    "build:render": "cd apps/backend && pnpm prisma generate && pnpm run build",
    "start:backend": "cd apps/backend && pnpm run start:prod",
    "start:frontend": "pnpm --filter frontend start",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "@nestjs/cli": "^10.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@types/multer": "^2.0.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}